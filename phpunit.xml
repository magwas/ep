<phpunit
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	stopOnFailure="true"
	stopOnError="true"
	stopOnIncomplete="true"
	>
	<testsuites>
		<testsuite name="unit">
			<directory prefix="test-" suffix=".php">./tests/</directory>
		</testsuite>
		<testsuite name="integration">
			<directory prefix="test-" suffix=".php">./integrationtests/</directory>
		</testsuite>
		<testsuite name="e2e">
			<directory prefix="test-" suffix=".php">./e2e/</directory>
		</testsuite>
	</testsuites>
</phpunit>
